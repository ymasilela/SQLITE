        <Button x:ConnectionId='3' x:Name="view_courses" Content="View Courses " HorizontalAlignment="Left" Margin="16,367,0,-57" VerticalAlignment="Top" Width="178" Background="#FF27996F"                        Height="141" RenderTransformOrigin="0.755,0.255" Foreground="#FF151515" ToolTipService.ToolTip="View Courses" BorderBrush="#FF151515"/>
